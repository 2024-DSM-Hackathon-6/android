<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="14dp"/>
                    <padding
                        android:top="8dp"
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="12dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/main400"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/dropdown_arrow"
                android:gravity="center|right"
                android:width="18dp"
                android:height="14dp"/>
        </layer-list>
    </item>
</selector>