<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.feed.FeedFragment">

    <TextView
        android:id="@+id/tv_feed_title"
        style="@style/main_title"
        android:text="게시판"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_feed_day"
        style="@style/text_feed_select"
        android:text="날짜순"
        app:layout_constraintStart_toStartOf="@id/tv_feed_title"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_title" />

    <TextView
        android:id="@+id/tv_feed_popular"
        style="@style/text_feed_select"
        android:text="인기순"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_feed_day"
        app:layout_constraintTop_toTopOf="@id/tv_feed_day"
        app:layout_constraintBottom_toBottomOf="@id/tv_feed_day"/>

    <ImageView
        android:id="@+id/iv_feed_refresh"
        style="@style/refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_feed_popular"
        app:layout_constraintBottom_toBottomOf="@id/tv_feed_popular"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_feed"
        style="@style/recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_day"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_feed_create"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/create_feed"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>